{
	"name": "ncoreflix",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "transmission-daemon && astro dev --host",
		"start": "transmission-daemon && astro build && HOST=0.0.0.0 PORT=3000 node dist/server/entry.mjs",
		"docker:dev": "docker compose --env-file .env up",
		"docker:prod": "docker compose --env-file .env.prod up -d",
		"astro": "astro",
		"test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
		"lint": "eslint --ext .ts,.astro ./src",
		"format-check": "prettier --check ./src",
		"format-fix": "prettier --write ./src",
		"ci:test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
		"ci:format-check": "prettier --check ./src",
		"ci:lint": "eslint --ext .ts,.astro ./src"
	},
	"dependencies": {
		"@astro-auth/client": "^1.0.5",
		"@astro-auth/core": "^1.0.12",
		"@astro-auth/providers": "^1.0.6",
		"@astrojs/node": "^5.1.1",
		"@astrojs/tailwind": "^3.1.1",
		"@formkit/auto-animate": "^1.0.0-beta.6",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/line-clamp": "^0.4.4",
		"astro": "^2.3.0",
		"astro-heroicons": "^0.3.0",
		"cheerio": "^1.0.0-rc.12",
		"form-data": "^4.0.0",
		"glob": "^10.0.0",
		"node-fetch-cache": "^3.1.3",
		"node-json-db": "^2.2.0",
		"node-ssh": "^13.1.0",
		"openapi-fetch": "^0.2.1",
		"parse-torrent-title": "^1.3.0",
		"rip-subtitles": "^0.0.1",
		"sass": "^1.62.0",
		"subtitle": "^4.2.1",
		"tailwindcss": "^3.3.1",
		"web-push": "^3.5.0",
		"zod": "^3.21.4",
		"zx": "^7.2.1"
	},
	"devDependencies": {
		"@jest/globals": "^29.5.0",
		"@types/glob": "^8.1.0",
		"@types/jest": "^29.5.2",
		"@types/node": "^18.15.11",
		"@types/node-fetch-cache": "^3.0.0",
		"@types/web-push": "^3.3.2",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-astro": "^0.27.1",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.5.0",
		"prettier": "^2.8.8",
		"prettier-plugin-astro": "^0.10.0",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1"
	}
}
