---
import type { Media } from '@/server/types/tmdb';
import DetailsBadges from './DetailsBadges.astro';

export type Props = {
	media: Media;
};

const { media } = Astro.props;

const { title, release, description, genres } = media;
---

<div
	class="w-full max-w-[90vw] rounded-xl bg-neutral-500 bg-opacity-20 px-2 py-2 text-center font-light ring-1 ring-neutral-200 ring-opacity-25 backdrop-blur-md md:px-4 md:py-3 md:text-left"
>
	<h1 class="mb-2 text-2xl font-bold md:mb-6 md:text-4xl">
		{title}
		<span class="text-base font-light text-neutral-200">({release})</span>
	</h1>
	{
		description && (
			<div class="mb-4 text-left md:mb-6">
				<h2 class="text-md mb-1 font-bold md:text-lg">Overview</h2>
				<p class="text-sm md:text-base">{description}</p>
			</div>
		)
	}

	<div class="mb-4 text-left md:mb-6">
		<p class="text-sm md:text-base">
			<strong class="font-bold">Genres:</strong>
			{genres.join(', ')}
		</p>
	</div>
	<DetailsBadges media={media} />
</div>
